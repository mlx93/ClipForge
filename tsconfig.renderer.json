{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist/renderer",
    "jsx": "react-jsx"
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/main/**/*"
  ]
}
